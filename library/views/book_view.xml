<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="library_book" model="ir.ui.view">
            <field name="model">library.book</field>
            <field name="name">library.book.tree</field>
            <field name="priority">16</field>
            <field name="arch" type="xml">
                <tree string="Books">
                    <field name="name"/>
                    <field name="publisher"/>
                    <field name="copies"/>
                    <field name="published_date"/>
                    <field name="author_ids"/>
                </tree>
            </field>
        </record>
        <record id="library_book_form" model="ir.ui.view">
            <field name="model">library.book</field>
            <field name="name">library.book.form</field>
            <field name="priority">16</field>
            <field name="arch" type="xml">
                <form string="Book">
                    <header/>

                    <sheet>
                    <field name="cover" widget="image"/>    
                        <group>
                            <field name="name"/>
                            <field name="publisher"/>
                            <field name="copies"/>
                            <field name="published_date"/>
                        </group>
                        <notebook>
                            <page string="Authors">
                                <field name="author_ids">
                                    <tree string="Authors">
                                        <field name="name"/>
                                    </tree>
                                    <form string="Authors">
                                        <field name="name"/>
                                        <field name="bio"/>
                                        <field name="books_id" readonly="1">
                                            <tree string="Books" options="{'no_create':True}">
                                                <field name="name"/>
                                                <field name="publisher"/>
                                                <field name="copies"/>
                                                <field name="published_date"/>
                                            </tree>
                                            <form string="Books" options="{'no_create':True}">
                                                <group>
                                                    <field name="name"/>
                                                    <field name="publisher"/>
                                                    <field name="copies"/>
                                                    <field name="published_date"/>
                                                </group>
                                            </form>
                                        </field>
                                    </form>
                                </field>
                            </page>

                            <page string="History">
                                <field name="history_ids">
                                    <tree string="History">
                                        
                                        <field name="checked_out"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="library_book_action" model="ir.actions.act_window">
            <field name="name">Book</field>
            <field name="res_model">library.book</field>
            <field name="context"></field>
            <field name="domain"></field>
        </record>
        <menuitem id="library_main_menu"
                  action=""
                  parent=""
                  sequence=""
                  web_icon="library,static/description/Book-PNG-HD.png"
                  name="Library Management"/>

        <menuitem id="library_book_menu"
                  action="library_book_action"
                  name="Books"
                  parent="library_main_menu" 
                  sequence="2"/>
        
    </data>
</odoo>